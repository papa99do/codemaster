# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)

# Snippet
GET     /snippets/:tags             controllers.SnippetController.search(tags: String)
GET     /snippet/:id                controllers.SnippetController.viewCode(id: Long)
POST    /snippet                    controllers.SnippetController.save(id: Option[Long])
DELETE  /snippet/:id                controllers.SnippetController.delete(id: Long)

# Template
GET     /templates/:mode            controllers.TemplateController.load(mode: String)
POST    /template                   controllers.TemplateController.save(id: Option[Long])

# ACE
GET     /langmodes                  controllers.AceController.getAvailableLangModes
